{
  "name": "vscode-mocha-runner",
  "displayName": "Mocha Runner",
  "description": "Simple way to run or debug a single (or multiple) tests from context-menu",
  "version": "0.4.59",
  "publisher": "firsttris",
  "author": "Tristan Teufel",
  "repository": {
    "type": "git",
    "url": "https://github.com/firsttris/vscode-jest-runner.git"
  },
  "license": "MIT",
  "icon": "public/icon.png",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Jest-Runner Config",
        "properties": {
          "mocharunner.configPath": {
            "type": "string",
            "default": "",
            "description": "Jest config path (relative to ${workFolder} e.g. jest-config.json)",
            "scope": "window"
          },
          "mocharunner.jestPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/jest/bin/jest.js)",
            "scope": "window"
          },
          "mocharunner.projectPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to project directory (e.g. /home/me/project/sub-folder)",
            "scope": "window"
          },
          "mocharunner.debugOptions": {
            "type": "object",
            "default": {},
            "description": "Add or overwrite vscode debug configurations (only in debug mode) (e.g. { \"args\": [\"--no-cache\"] })",
            "scope": "window"
          },
          "mocharunner.runOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --coverage"
            },
            "description": "Add CLI Options to the Jest Command e.g. https://jestjs.io/docs/en/cli",
            "scope": "window"
          },
          "mocharunner.jestCommand": {
            "type": "string",
            "default": "",
            "description": "Define an alternative Jest command (e.g. for Create React App and similar abstractions)",
            "scope": "window"
          },
          "mocharunner.terminalEnv": {
            "type": "object",
            "default": {},
            "description": "Define shell environment to be used in the terminal",
            "scope": "window"
          },
          "mocharunner.disableCodeLens": {
            "type": "boolean",
            "default": false,
            "description": "Disable CodeLens feature",
            "scope": "window"
          },
          "mocharunner.runInExternalNativeTerminal": {
            "type": "boolean",
            "default": false,
            "description": "Run jest runner in external native terminal. Disabled on debug mode",
            "scope": "window"
          },
          "mocharunner.codeLens": {
            "type": "array",
            "default": [
              "run",
              "debug"
            ],
            "description": "Enable desired codeLens, possible value : 'run', 'debug', 'watch', 'coverage'. Defaults to ['run', 'debug'] ",
            "items": {
              "type": "string",
              "description": "Either 'run', 'debug', 'watch', 'coverage'"
            },
            "scope": "window"
          },
          "mocharunner.codeLensSelector": {
            "type": "string",
            "default": "**/*.{test,spec}.{js,jsx,ts,tsx}",
            "description": "CodeLens will be shown on files matching this pattern"
          },
          "mocharunner.enableYarnPnpSupport": {
            "type": "boolean",
            "default": false,
            "description": "Enable if you are using Yarn 2 with Plug'n'Play",
            "scope": "window"
          },
          "mocharunner.changeDirectoryToWorkspaceRoot": {
            "type": "boolean",
            "default": true,
            "description": "Changes directory to workspace root before executing the test",
            "scope": "window"
          },
          "mocharunner.preserveEditorFocus": {
            "type": "boolean",
            "default": false,
            "description": "Preserve focus on editor when running tests",
            "scope": "window"
          },
          "mocharunner.yarnPnpCommand": {
            "type": "string",
            "default": "yarn-*.*js",
            "description": "Command for debugging with Plug'n'Play",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.runMocha",
        "title": "Run Jest"
      },
      {
        "command": "extension.runMochaPath",
        "title": "Run Jest on Path"
      },
      {
        "command": "extension.runMochaCoverage",
        "title": "Run Jest and generate Coverage"
      },
      {
        "command": "extension.runMochaAndUpdateSnapshots",
        "title": "Run Jest and update Snapshots"
      },
      {
        "command": "extension.runPrevMocha",
        "title": "Run Jest - Run Previous Test"
      },
      {
        "command": "extension.runMochaFile",
        "title": "Run Jest on File"
      },
      {
        "command": "extension.debugMocha",
        "title": "Debug Jest"
      },
      {
        "command": "extension.debugMochaPath",
        "title": "Debug Jest on Path"
      },
      {
        "command": "extension.runMochaFileWithCoverage",
        "title": "Run Jest File and generate Coverage"
      },
      {
        "command": "extension.runMochaFileWithWatchMode",
        "title": "Run Jest File in Watch Mode"
      },
      {
        "command": "extension.watchMocha",
        "title": "Run Jest --watch"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.runMocha",
          "group": "02_jest"
        },
        {
          "command": "extension.debugMocha",
          "group": "02_jest"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.runMochaPath",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec|test)\\.(js|jsx|ts|tsx)$/",
          "group": "02_jest@1"
        },
        {
          "command": "extension.debugMochaPath",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec|test)\\.(js|jsx|ts|tsx)$/",
          "group": "02_jest@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "jest .src/test",
    "vsce:publish": "vsce publish patch -m '%s [skip ci]' && git push",
    "ovsx:publish": "ovsx publish",
    "publish": "npm run vsce:publish && npm run ovsx:publish",
    "eslint:fix": "eslint --cache --fix",
    "prettier": "prettier --write"
  },
  "devDependencies": {
    "@jest/types": "^29.1.2",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.5",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "babylon": "^6.18.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "ovsx": "^0.5.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "vsce": "^2.11.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "jest-editor-support": "^30.2.0"
  }
}
